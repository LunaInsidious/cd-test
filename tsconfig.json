{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"module": "ES2020",
		"target": "ES2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"types": ["vitest/importMeta"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts"]
}
